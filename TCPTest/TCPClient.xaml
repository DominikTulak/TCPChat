        <Label Content="Port:" HorizontalAlignment="Left" Margin="44,46,0,0" VerticalAlignment="Top"/>
        <Label Content="Jméno:" HorizontalAlignment="Left" Margin="44,72,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="JmenoBox" HorizontalAlignment="Left" Height="23" Margin="126,77,0,0" TextWrapping="Wrap" Text="Klient1" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
